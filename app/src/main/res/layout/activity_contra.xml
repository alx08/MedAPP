<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContraActivity">

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="300sp"
        android:layout_height="40dp"
        android:background="@drawable/boton_interaccion"
        android:fontFamily="sans-serif-light"
        android:text="Registrar"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="@color/design_default_color_error"
        android:textSize="20sp"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.979" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="140sp"
        android:layout_height="140sp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/candado" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="360sp"
        android:layout_height="278sp"
        android:layout_marginBottom="210dp"
        app:cardCornerRadius="9sp"
        app:cardElevation="4sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Ingresar correo electr칩nico"
            android:textSize="20sp"
            android:translationX="10sp"
            android:translationY="20sp" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="340sp"
            android:layout_height="46sp"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:hint="Correo electr칩nico"
            android:inputType="textEmailAddress"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:textColor="@color/black_overlay"
            android:translationX="10sp"
            android:translationY="50sp" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Ingresar contrase침a"
            android:textSize="20sp"
            android:translationX="10sp"
            android:translationY="100sp" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="340sp"
            android:layout_height="46sp"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:hint="Contrase침a"
            android:inputType="textPassword"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:textColor="@color/black_overlay"
            android:translationX="10sp"
            android:translationY="135sp" />

        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:background="@drawable/common_google_signin_btn_icon_light"
            android:translationX="135sp"
            android:translationY="200sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>