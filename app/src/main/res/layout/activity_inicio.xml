<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="359dp"
        android:layout_height="277dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:layout_constraintVertical_bias="0.474">

        <Button
            android:id="@+id/btnCalendario"
            android:layout_width="360dp"
            android:layout_height="55dp"
            android:background="@drawable/boton"
            android:fontFamily="sans-serif-light"
            android:text="Paciente"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:translationY="225dp"
            android:typeface="sans"
            app:backgroundTint="#C4E91E63" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:translationX="110sp"
            android:translationY="40sp"
            app:srcCompat="@drawable/crowd_patient_patients_icon_140474mejorado2" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="359dp"
        android:layout_height="277dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.273">

        <Button
            android:id="@+id/btnDoctor"
            android:layout_width="360dp"
            android:layout_height="55dp"
            android:background="@drawable/boton"
            android:fontFamily="sans-serif-light"
            android:text="MÃ©dico"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:translationY="225dp"
            android:typeface="sans"
            app:backgroundTint="#B5BB86FC" />

        <ImageView
            android:id="@+id/imageDra"
            android:layout_width="136dp"
            android:layout_height="132dp"
            android:translationX="20sp"
            android:translationY="40sp"
            app:srcCompat="@drawable/doctor__1_"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/imageDoc"
            android:layout_width="134dp"
            android:layout_height="132dp"
            android:translationX="200sp"
            android:translationY="40sp"
            app:srcCompat="@drawable/doctor"
            tools:ignore="VectorDrawableCompat" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="8sp"
        android:text="Bienvenido"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="@color/black_overlay"
        android:textSize="34sp"
        android:textStyle="bold"
        android:theme="@style/CardView"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:capitalize="words"
        android:cursorVisible="true"
        android:fontFamily="sans-serif-light"
        android:lineSpacingExtra="8sp"
        android:selectAllOnFocus="false"
        android:text="Ingresar como:"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="@color/black_overlay"
        android:textColorLink="@color/purple_200"
        android:textIsSelectable="false"
        android:textSize="30sp"
        android:typeface="sans"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />


</androidx.constraintlayout.widget.ConstraintLayout>